	scanf("%f",&p);
	printf("\nenter rate : ");
	scanf("%f",&r);
	printf("\nenter time: ");
	scanf("%d",&t);
	a=pow((1+(r/100.0)),t)*p;
	ci=a-p;
	printf("\ncompount interest = %f",a);	
}
*/

